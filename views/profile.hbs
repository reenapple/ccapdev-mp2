<html>
    <head>
         <link rel="stylesheet" href="styles.css" type="text/css">
        {{!-- <link rel="stylesheet" href="postcreate.css" type="text/css"> --}}
        <link rel="stylesheet" href="profile.css" type="text/css">
        
		<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="myscript.js"></script>
    </head>
    <body>
        <header>
            {{>header}}
        </header>

        <section class="container">
            <div class="content">
                {{#each user}}
                    <div class="profilecontainer">
                        <div class="buttoncontainer button bpurple floatright">Edit</div>
                        <div class="imgcontainer">
                            <img src="https://t3.ftcdn.net/jpg/00/64/67/80/240_F_64678017_zUpiZFjj04cnLri7oADnyMH0XBYyQghG.jpg" class="imguser">
                        </div>
                        <div class="detailscontainer">
                            <span class="title">{{firstname}} {{lastname}}</span><br>
                            <span class="heading">({{username}})</span><br><br>
                            <div class="desc">{{description}}</div>
                        </div>
                    </div>


                    <div class="allposts">
                        {{#each dogpost}} 
                            <a href="/post{{_id}}" class="dogpost-browse {{gender}}">
                                <div class="favorite"><div id="favicon"></div>{{favecount}}</div>
                                <div class="dogpicture-browse"><img class="pic-browse" src="{{picture}}"></div>
                                <div class="dogname-browse title">{{dogname}}</div>
                                <div class="dogbreed-browse body">({{breed}})</div>
                            </a>
                        {{/each}}
                    </div>
                {{/each}}
                </div>
            </div>
        </section>

        <footer>
            {{>footer}}
        </footer>
    </body>
</html>