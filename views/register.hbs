<html>
    <head>
        <link rel="stylesheet" href="register.css" type="text/css">
        <link rel="stylesheet" href="postcreate.css" type="text/css">
        <link rel="stylesheet" href="styles.css" type="text/css">
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    </head>

    <body>
        <header>
            {{>header}}
        </header>
        
        <section class="smallestcontainer">
            <div class="content">
                <div class="title">Sign up</div>
                <br><br>

                {{#if error}}
                <div class="centererror">
                    <div class="error">{{error}}</div>
                </div>
                {{/if}}
                <br>
                
                <form method="POST" action="signup">
                    <div class="sameline">
                        <div class="line1left">First Name{{#if error}}<span class="rederr">*</span>{{/if}}</div>
                        <div class="line2left"><input type="text" class="postinput" name="firstname" placeholder="First name"></div>
                        <div class="line1right">Last Name{{#if error}}<span class="rederr">*</span>{{/if}}</div>
                        <div class="line2right"><input type="text" class="postinput" name="lastname" placeholder="Last name"></div>
                    </div><br>
                    Email{{#if error}}<span class="rederr">*</span>{{/if}}<input type="email" class="postinput" name="email" placeholder="Email"><br>
                    Username{{#if error}}<span class="rederr">*</span>{{/if}}<input type="text" class="postinput" name="username" placeholder="Username"><br>
                    Password{{#if error}}<span class="rederr">*</span>{{/if}}<input type="password" class="postinput" name="password" placeholder="Password"><br>
                    Short Description <textarea rows = "5" class="postinput bigheight" name="description"></textarea><br>

                    <div class="postbuttons centererror">
                        <input type="submit" class="button bblue" value="Sign up">
                    </div><br>
                    <div class="centererror">
                        <a href="/" class="reqlink">Continue as Guest</a>
                    </div>
                </form>
            </div>
        </section>
    </body>
</html>
