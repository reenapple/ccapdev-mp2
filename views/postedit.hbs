<html>
    <head>
        <link rel="stylesheet" href="styles.css" type="text/css"> 
        <link rel="stylesheet" href="postcreate.css" type="text/css"> 
        
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="myscript.js"></script>
    </head>

    <body>
        <header>
            {{>header}}
        </header>

        <section class="smallcontainer">
            <div class="content">
                <div class="title"> Create a New Post </div>
                <br><br> 

                <div class="postform">
                    <form method="POST" action="editpost"> 
                        Dog name <input type="text" class="postinput" placeholder="Put here Name of Dog" name="dogname"> <br> 
                        Breed <input type="text"  class="postinput" placeholder="breed" name="breed"> <br> 
                        Location <input type="text" class="postinput" placeholder="location" name="location"> <br> 
                        Age <input type="number" class="postinput smallwidth" placeholder="age" name="dogage" min="0" max="5"> <br> 
                        Gender <select class="postinput smallwidth" name="dogender"> 
                            <option value="blank">-</option>
                            <option value="female"> Female </option>
                            <option value="male"> Male </option>
                        </select>
                        <br> 

                        Short Description <textarea rows = "5" class="postinput bigheight" placeholder="description" name="dogdesc"></textarea><br>
                        
                        Upload an Image <input type="file" class="postinput smallwidth" name="postpic"> 

                        <div class="postbuttons floatright">
                            <a href="cancel" class="button bpurple">Cancel</a> 
                            <input class="button bblue" type="submit" value="Edit">
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <footer>
            {{>footer}}
        </footer>

    </body>
</html>
