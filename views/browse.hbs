<html>
    <head>
         <link rel="stylesheet" href="styles.css" type="text/css">
        <link rel="stylesheet" href="postcreate.css" type="text/css">
        
		<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="myscript.js"></script>
    </head>
    <body>
        <header>
            {{>header}}
        </header>

        <section class="container">
            <div class="content">

                <div class="title">Browse</div>
                <br>

                <div>
                    <form method="get" action="search" class="search">
                        <input type="text" class="postinput searchbar" placeholder="Search..." name="q">
                        <select class="postinput sortby" name="sortby" id="sortby">
                            <option value="bynew" {{#if bynew}}selected{{/if}}>Newest</option>
                            <option value="byfavorite" {{#if byfavorite}}selected{{/if}}>Most Liked</option>
                            <option value="bybreed" {{#if bybreed}}selected{{/if}}>Breed</option>
                            <!--<option value="bylocation">Location</option>-->
                        </select>
                        <input class="button bblue searchbutton" type="submit" value="Search">
                    </form>
                </div>
                <div class="pagenum"><- 1 2 3 . . . 16 17 18 -></div>

                <div class="allposts">
                    {{#each dogpost}} 
                        <a href="/post{{_id}}" class="dogpost-browse {{gender}}">
                            <div class="favorite"><div id="favicon"></div>{{favecount}}</div>
                            <div class="dogpicture-browse"><img class="pic-browse" src="{{picture}}"></div>
                            <div class="dogname-browse title">{{dogname}}</div>
                            <div class="dogbreed-browse body">({{breed}})</div>
                        </a>
                    {{/each}}
                <!--{{#each dogs}} 
                    <div class="dogpost-browse {{gender}}">
                        <div class="favorite"><div id="favicon"></div>{{favecount}}</div>
                        <div class="dogpicture-browse"><img class="pic-browse" src="{{picture}}"></div>
                        <div class="dogname-browse title">{{name}}</div>
                        <div class="dogbreed-browse body">({{breed}})</div>
                    </div>
                {{/each}}-->
                </div>
            </div>
        </section>

        <footer>
            {{>footer}}
        </footer>
    </body>
</html>